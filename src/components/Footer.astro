---
import Social from "./Social.astro";
---

<style>
  footer {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
    border-top: 2px solid var(--color-text-faded);
    padding-top: 1rem;
  }
  .social-list {
    padding-left: 0px;
    height: fit-content;
    line-height: 32pt;
  }
  .social-item {
    list-style: none;
    display: inline;
    margin: auto;
  }
</style>

<footer>
  <ul class="social-list">
    <li class="social-item">
      <Social platform="instagram" username="erincorbettmusic" />
    </li>
    <li class="social-item">
      <Social platform="bluesky" username="erincorbett" />
    </li>
    <li class="social-item">
      <Social platform="bandcamp" username="erincorbett" />
    </li>
    <li class="social-item">
      <Social platform="youtube" username="UCVJf72_iK-LAKZnxki5yLIw" />
    </li>
  </ul>
  <p>&copy; Erin Corbett {new Date().getFullYear()}</p>
</footer>
