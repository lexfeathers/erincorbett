---
const { platform, username } = Astro.props;
---

<a
  class="button"
  href={`https://www.${platform}.com/${username}`}
  target="_blank">{platform}</a
>

<style>
  a {
    padding: 0.5rem 1rem;
    color: var(--color-secondary);
    background-color: var(--color-text);
    text-decoration: none;
    font-size: var(--text-small);
  }
</style>
