---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";

const title = "Erin Corbett";
---

<header>
  <div class="header-top">
    <h1>
      <a href="/" id="logo"><img src="/favicon.ico" alt="Erin Corbett" /></a>
      <a href="/" id="logo">{title}</a>
    </h1>
    <div class="hamburger-icons">
      <Hamburger />
    </div>
  </div>
  <nav>
    <Navigation />
  </nav>
</header>

<style>
  header h1 {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
    & a > img {
      margin-right: 1rem;
    }
  }
  @media screen and (max-width: 749px) {
    header h1 {
      margin-bottom: 0;
    }
  }
</style>
